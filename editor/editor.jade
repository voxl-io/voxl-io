template(name='editor')
  h1 xml3d / Meteor integration example

  .color
    button(data-color='1 0.0 0') red
    button(data-color='1 0.5 0') orange
    button(data-color='1 1 0') yellow
    button(data-color='0 1 0') green
    button(data-color='0 0 1') blue
    button(data-color='1 0 1') violet
    button(data-color='0 1 1') cyan
    button(data-color='1 1 1') white
    button(data-color='0 0 0') black

  .shader
    button matte
    button diffuse
    button phong

  xml3d(activeView='#myView' class="xml3d" width="600px" height="600px")

    shader(id='matte' script='urn:xml3d:shader:matte')
      float3(name='diffuseColor')= color
      bool(name='useVertexColor') false

    shader(id='diffuse' script='urn:xml3d:shader:diffuse')
      float3(name='diffuseColor')= color
      bool(name='useVertexColor') false

    shader(id='phong' script='urn:xml3d:shader:phong')
      float3(name='diffuseColor')= color
      float(name='ambientIntensity') 0.5

    lightshader(id='light1' script='urn:xml3d:lightshader:directional')
      float3(name='intensity') 1 1 1

    group(style='transform: translate3d(50px 0 0)')
      light(shader='#light1')

    +assets

    view(id='myView' position='0 0 50')

    group(shader=shader style='transform: rotate3d(1, 0, 0, -45deg) rotate3d(0, 0, 1, 45deg)')
      +cube(pos=cpos)
