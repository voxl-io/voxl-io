arrow(size, color)
  &:after, .arrow_box:before
    left 100%
    top 50%
    content ' '
    height 0
    width 0
    position absolute
    border solid transparent

  &:after
  	border-color rgba(color, 0.0)
  	border-left-color color
  	border-width size
  	margin-top -size

.vertical-toolbar
  position absolute
  top 175px
  left 0
  width 70px

  button
    display inline-block
    width 50px
    height 50px
    background-color black
    border none
    border-radius 50%
    outline none
    box-shadow 0 0 3px black
    margin 5px 10px

    &.active
      border 3px solid white
